{{page-title "Blog"}}
<div class="container mx-auto flex justify-center mt-10">
  {{#if (gt @model.length 0)}}
    <ul class="w-full">
      {{#each @model as |post|}}
        <LinkTo
          @tagName="li"
          @route="blog.post"
          @model={{post.slug}}
          class="post-link"
        >
          <div class="flex justify-between">
            <span class="font-display text-indigo-700 dark:text-white text-xl">{{post.title}}</span>
            <span class="hidden md:block font-body text-gray-500 text-sm dark:text-red-500">{{post.publishDate}}</span>
          </div>
          <div class="hidden md:block font-body text-gray-500 text-sm dark:text-red-500 mt-4">
            {{array-join post.subHeaders seperator=" | "}}
          </div>
          <div class="md:hidden font-body text-gray-500 text-sm dark:text-red-500">{{post.publishDate}}</div>
        </LinkTo>
      {{/each}}
    </ul>
  {{else}}
    <div class="w-full border border-gray dark:border-gray-700 rounded p-4 m-4 bg-white dark:bg-gray-700 bg-opacity-95 dark:bg-opacity-100">
      <span class="font-display text-indigo-700 dark:text-white">Coming Soon!</span>
    </div>
  {{/if}}
</div>