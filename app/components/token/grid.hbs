<div class="grid sm:grid-cols-1 md:grid-cols-2 gap-32 sm:gap-4 md:gap-8 lg:gap-16 py-10 lg:mx-16">
  {{#each @tokens as |token|}}
    <Nft::Provider @token={{token}} as |provider|>
      {{#if provider.metadata}}
        <Token::Grid-Item
          @token={{provider.token}}
          @uri={{provider.uri}}
          @metadata={{provider.metadata}}
        />
      {{/if}}
    </Nft::Provider>
  {{/each}}
</div>