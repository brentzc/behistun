<div class="flex mx-16 mt-4 mb-8 bg-white rounded">
  <div class="flex flex-col w-1/4 pt-8 pl-8">
    <Loading-Text
      @text={{@metadata.name}}
      @loadingClass="bg-indigo-200 animate-pulse rounded h-8 w-1/2 ml-2"
      @displayClass="text-3xl text-indigo-500 font-display"
    />
    <Loading-Text
      @text={{@metadata.description}}
      @loadingClass="bg-indigo-200 animate-pulse rounded h-64 w-full ml-2 mt-8"
      @displayClass="text-md text-gray-700 text-base font-body pt-8"
    />
  </div>
  <div class="w-1/2 flex justify-center">
    {{#unless this.displayImage}}
      <div class="animate-pulse bg-indigo-200 h-96 w-full m-8 rounded" />
    {{/unless}}
    <img
      src={{this.image_path}}
      alt={{@metadata.name}}
      class="object-cover max-h-96 rounded my-8 {{unless this.displayImage "hidden"}}"
      {{on-load this.allowDisplayImage}}
    />
  </div>
  <div class="flex flex-col w-1/4 pt-8 pr-8 text-center">
    <a
      href={{concat "https://etherscan.io/token/" @token.contractAddress "?a=" @token.tokenId}}
      class="border-2 font-display px-5 py-2 hover:bg-gray-200 my-4"
      rel="noopener noreferrer"
      target="_blank"
    >
      View on Etherscan
    </a>
    <a
      href={{concat "https://opensea.io/assets/" @token.contractAddress "/" @token.tokenId}}
      class="border-2 font-display px-5 py-2 hover:bg-gray-200 my-4"
      rel="noopener noreferrer"
      target="_blank"
    >
      View on OpenSea
    </a>
  </div>
</div>