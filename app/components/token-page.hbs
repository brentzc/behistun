<div class="max-w-sm w-full lg:max-w-full md:flex bg-white mt-10">
  <img src={{this.image_path}} alt={{@metadata.name}} class="md:max-w-1/3 sm:max-w-1/2 mx-auto h-48 md:h-full" />
  <div class="p-10">
    <h2 class="text-3xl text-indigo-500 font-display">
      {{@metadata.name}}
    </h2>
    <p class="text-xl text-gray-700 text-base font-body">{{@metadata.description}}</p>
    <p class="mt-4">
      <a
        href={{concat "https://etherscan.io/token/" @token.contractAddress "?a=" @token.tokenId}}
        class="border-2 font-display px-5 py-2 hover:bg-gray-200"
        rel="noopener noreferrer"
        target="_blank"
      >
        View on Etherscan
      </a>
    </p>
  </div>
</div>